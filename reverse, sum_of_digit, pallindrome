//reverse, sum_of_digit, pallindrome
#include<stdio.h>
#include<conio.h>
int main()
{
    int dividend,remainder=0,quotient=0,reverse=0,pallindrome,sum=0;

    printf("original number ");
    scanf("%d",&dividend);
    pallindrome=dividend; //original number ta copy kore nilam

    while(dividend>0){
        remainder=dividend%10;
        quotient=dividend/10;
        dividend=quotient;
        reverse=(reverse*10)+remainder;
        sum=sum+remainder;
    }
    printf("reverse number %d\n",reverse);
    printf("sum_of_digit is %d\n",sum);

    if(pallindrome == reverse){
        printf("pallindrome.");
    }else printf("not pallindrome.");
    return 0;
}


/*
1.check dividend>10
2.find remainder and print
3.find quotient and update dividend=quotient
4.last printf for print last dividend
5. formula divisor|dividend|quotient
                -------------
                  remainder
*/
